var h1=document.querySelector("h1")
var h1text=h1.textContent()
var splitedText=h1Text.split("")
splitedText.forEach(function(elem){
  clutter+=`<span>${elem}</span>`
})
h1.innerHtml=clutter;
****************************
  concept
****************************
span tag is inline element when we apply on gsap("",{
  y:100 
});  it will not create any effeect because y:100 it will take it as a transform:translate(100).but this propery is not applicable for
  inline element. so what i need to do is make this element inline block like this
  h1 span(
    dispaly:inline-block
    )
  then it will work
  **************************************************
  var h1=document.querySelector("h1")
var h1text=h1.textContent()
var splitedText=h1Text.split("")
  var halfValue=Math.floor(splitedText.length/2)
splitedText.forEach(function(elem,idx){
  if(idx<halfValue){
    clutter+=`<span class="a">${elem}</span>`
  }
  else{
     clutter+=`<span class="b">${elem}</span>`
  }
  
})
h1.innerHtml=clutter;
**********************************************************************************
Media query
************************************************************************************
  @Media(width<=400px){                     |   @Media(max-width:400px){ 
  body{                                     |   maxwidth means upto matlab 400 ya 400 se less
    background-color:green   same as
  }
  }
  
******************
  @Media(orientation:portrait){    or landscape  |pprtrait means jab apki height width se jayda ho 
*************
   @Media(min-width:200px){
   body{                                    
    background-color:green   same as
  }
  -->iska matlab starting from 400 px se ho toh ye wala property apply kar do
*****************************
 @media  (min-width:400px) and (max-width:600px){
  body{
    backgroundColor:green
  }
}-->400 se 600 px ke bich me hoga toh green color apply ho jayga
    ***********************
@media screen and (max-width:1024px){
.container{
  flex-direction:column;
  }
.gallary{
  width:100%
  }
   .nav i{
     display:none;
     flex-wrap:800
   }
                       
  }

